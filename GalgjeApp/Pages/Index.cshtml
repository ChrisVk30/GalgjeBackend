@model GalgjeApp.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>This app has been set up to provide the user a nice experience to play hangman!</p>

    <button><a class="nav-link text-dark" asp-area="" asp-page="/PlayerLogin">Click here to play a game of Hangman!</a></button>

